{
    "customSyntax": "postcss-scss",
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-recommended-scss"
    ],
    "plugins": ["stylelint-no-unsupported-browser-features", "stylelint-scss"],
    "rules": {
        "plugin/no-unsupported-browser-features": [
            true,
            {
                "severity": "error"
            }
        ]
    }
}
